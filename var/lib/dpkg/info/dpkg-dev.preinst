#!/bin/sh
# See deb-preinst(5).

set -e

remove_doc_symlink() {
    if [ -L /usr/share/doc/dpkg-dev ]; then
	rm /usr/share/doc/dpkg-dev
    fi
}

case "$1" in
    install)
	;;

    upgrade)
	remove_doc_symlink
	;;

    abort-upgrade)
	;;


    *)
	echo "$0 called with unknown argument '$1'" 1>&2
	exit 1
	;;
esac


exit 0
